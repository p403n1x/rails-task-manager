<h1>Task#show</h1>
<p><%= @task.id %></p>
<p><%= @task.title %></p>
<p><%= @task.details %></p>

<p><%= link_to "Back to list", tasks_path %></p>
<p><%= link_to "Edit it", task_edit_path(@task) %></p>
<p><%= link_to "Delete it", task_destroy_path(@task), method: :delete, data: { confirm: "Are you sure?" } %></p>
